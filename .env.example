# ASOS Konfigürasyon Dosyası

# Sunucu Ayarları
PORT=3000
NODE_ENV=production

# MongoDB Bağlantısı
MONGODB_URI=mongodb://localhost:27017/asos

# JWT Secret (Güvenli bir key ile değiştirin)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Admin Kullanıcı (İlk kurulumda oluşturulacak)
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=admin123

# Mail Sunucu Ayarları
MAIL_DOMAIN=localhost
POSTFIX_CONFIG_PATH=/etc/postfix
DOVECOT_CONFIG_PATH=/etc/dovecot

# DNS Ayarları
DNS_PROVIDER=local
BIND_ZONE_PATH=/etc/bind/zones

# Docker Ayarları
DOCKER_SOCKET=/var/run/docker.sock

# SSL/TLS Ayarları
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private
LETSENCRYPT_EMAIL=admin@localhost

# Log Ayarları
LOG_LEVEL=info
LOG_PATH=/var/log/asos
