<!-- Page Title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Domain Yönetimi</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">ASOS</a></li>
                    <li class="breadcrumb-item active">Domainler</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Domain Listesi</h5>
                <div class="flex-shrink-0">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDomainModal">
                        <i class="ri-add-line align-middle me-1"></i> Yeni Domain
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-nowrap align-middle mb-0" id="domainsTable">
                        <thead>
                            <tr>
                                <th scope="col">Domain</th>
                                <th scope="col">Tip</th>
                                <th scope="col">SSL</th>
                                <th scope="col">DNS Kayıtları</th>
                                <th scope="col">Durum</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="domainsList">
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Yükleniyor...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Domain Modal -->
<div class="modal fade" id="addDomainModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Domain Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addDomainForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Domain Adı</label>
                        <input type="text" class="form-control" name="domain" placeholder="ornek.com" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Domain Tipi</label>
                        <select class="form-select" name="type">
                            <option value="primary">Primary (Ana Domain)</option>
                            <option value="addon">Addon Domain</option>
                            <option value="subdomain">Subdomain</option>
                            <option value="alias">Alias</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="sslEnabled" id="sslEnabled" checked>
                            <label class="form-check-label" for="sslEnabled">SSL Sertifikası (Let's Encrypt)</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- DNS Records Modal -->
<div class="modal fade" id="dnsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">DNS Kayıtları - <span id="dnsDomainName"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-end mb-3">
                    <button class="btn btn-sm btn-primary" onclick="addDnsRecord()">
                        <i class="ri-add-line me-1"></i> DNS Kaydı Ekle
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Tip</th>
                                <th>Ad</th>
                                <th>Değer</th>
                                <th>TTL</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="dnsRecordsList"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
var currentDomainId = null;

document.addEventListener('DOMContentLoaded', function() {
    loadDomains();

    document.getElementById('addDomainForm').addEventListener('submit', function(e) {
        e.preventDefault();
        addDomain();
    });
});

function loadDomains() {
    fetch('/api/domains')
        .then(r => r.json())
        .then(data => {
            var tbody = document.getElementById('domainsList');
            if (!data.success || !data.data || data.data.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted py-4"><i class="ri-global-line fs-24 d-block mb-2"></i>Henüz domain eklenmemiş</td></tr>';
                return;
            }

            tbody.innerHTML = data.data.map(d => `
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="avatar-xs me-2 flex-shrink-0">
                                <span class="avatar-title bg-primary-subtle text-primary rounded">
                                    <i class="ri-global-line"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">${d.domain}</h6>
                            </div>
                        </div>
                    </td>
                    <td><span class="badge bg-info-subtle text-info">${d.type || 'primary'}</span></td>
                    <td>
                        ${d.sslEnabled ? 
                            '<span class="badge bg-success-subtle text-success"><i class="ri-shield-check-line me-1"></i>Aktif</span>' : 
                            '<span class="badge bg-warning-subtle text-warning"><i class="ri-shield-line me-1"></i>Pasif</span>'}
                    </td>
                    <td>
                        <button class="btn btn-sm btn-soft-primary" onclick="showDnsRecords('${d._id}', '${d.domain}')">
                            <i class="ri-file-list-line me-1"></i> ${(d.dnsRecords || []).length} Kayıt
                        </button>
                    </td>
                    <td>
                        ${d.isActive ? 
                            '<span class="badge bg-success">Aktif</span>' : 
                            '<span class="badge bg-danger">Pasif</span>'}
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                İşlemler
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" onclick="toggleDomain('${d._id}', ${d.isActive})">
                                    <i class="ri-toggle-line me-2"></i>${d.isActive ? 'Deaktif Et' : 'Aktif Et'}
                                </a></li>
                                <li><a class="dropdown-item" href="#" onclick="renewSSL('${d._id}')">
                                    <i class="ri-refresh-line me-2"></i>SSL Yenile
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#" onclick="deleteDomain('${d._id}')">
                                    <i class="ri-delete-bin-line me-2"></i>Sil
                                </a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            `).join('');
        })
        .catch(err => {
            document.getElementById('domainsList').innerHTML = '<tr><td colspan="6" class="text-center text-danger py-4">Yükleme hatası</td></tr>';
        });
}

function addDomain() {
    var form = document.getElementById('addDomainForm');
    var formData = new FormData(form);
    var data = {
        domain: formData.get('domain'),
        type: formData.get('type'),
        sslEnabled: document.getElementById('sslEnabled').checked
    };

    fetch('/api/domains', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
    })
    .then(r => r.json())
    .then(res => {
        if (res.success) {
            bootstrap.Modal.getInstance(document.getElementById('addDomainModal')).hide();
            form.reset();
            loadDomains();
            Swal.fire('Başarılı!', 'Domain başarıyla eklendi.', 'success');
        } else {
            Swal.fire('Hata!', res.error || 'Domain eklenemedi.', 'error');
        }
    })
    .catch(() => Swal.fire('Hata!', 'Bağlantı hatası', 'error'));
}

function showDnsRecords(domainId, domainName) {
    currentDomainId = domainId;
    document.getElementById('dnsDomainName').textContent = domainName;
    
    fetch(`/api/domains/${domainId}`)
        .then(r => r.json())
        .then(data => {
            var tbody = document.getElementById('dnsRecordsList');
            var records = data.data?.dnsRecords || [];
            
            if (records.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted">DNS kaydı yok</td></tr>';
            } else {
                tbody.innerHTML = records.map((r, i) => `
                    <tr>
                        <td><span class="badge bg-secondary">${r.type}</span></td>
                        <td>${r.name}</td>
                        <td><code>${r.value}</code></td>
                        <td>${r.ttl || 3600}</td>
                        <td>
                            <button class="btn btn-sm btn-soft-danger" onclick="deleteDnsRecord('${domainId}', ${i})">
                                <i class="ri-delete-bin-line"></i>
                            </button>
                        </td>
                    </tr>
                `).join('');
            }
            
            new bootstrap.Modal(document.getElementById('dnsModal')).show();
        });
}

function addDnsRecord() {
    Swal.fire({
        title: 'DNS Kaydı Ekle',
        html: `
            <select id="dnsType" class="form-select mb-2">
                <option value="A">A</option>
                <option value="AAAA">AAAA</option>
                <option value="CNAME">CNAME</option>
                <option value="MX">MX</option>
                <option value="TXT">TXT</option>
                <option value="NS">NS</option>
            </select>
            <input id="dnsName" class="form-control mb-2" placeholder="Ad (@ veya subdomain)">
            <input id="dnsValue" class="form-control mb-2" placeholder="Değer">
            <input id="dnsTtl" class="form-control" placeholder="TTL (varsayılan: 3600)" type="number">
        `,
        showCancelButton: true,
        confirmButtonText: 'Ekle',
        cancelButtonText: 'İptal',
        preConfirm: () => {
            return {
                type: document.getElementById('dnsType').value,
                name: document.getElementById('dnsName').value,
                value: document.getElementById('dnsValue').value,
                ttl: parseInt(document.getElementById('dnsTtl').value) || 3600
            };
        }
    }).then(result => {
        if (result.isConfirmed) {
            fetch(`/api/domains/${currentDomainId}/dns`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(result.value)
            })
            .then(r => r.json())
            .then(res => {
                if (res.success) {
                    showDnsRecords(currentDomainId, document.getElementById('dnsDomainName').textContent);
                    Swal.fire('Başarılı!', 'DNS kaydı eklendi.', 'success');
                } else {
                    Swal.fire('Hata!', res.error, 'error');
                }
            });
        }
    });
}

function deleteDomain(id) {
    Swal.fire({
        title: 'Emin misiniz?',
        text: 'Bu domain kalıcı olarak silinecek!',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#f06548',
        cancelButtonColor: '#878a99',
        confirmButtonText: 'Evet, Sil',
        cancelButtonText: 'İptal'
    }).then(result => {
        if (result.isConfirmed) {
            fetch(`/api/domains/${id}`, { method: 'DELETE' })
                .then(r => r.json())
                .then(res => {
                    if (res.success) {
                        loadDomains();
                        Swal.fire('Silindi!', 'Domain başarıyla silindi.', 'success');
                    } else {
                        Swal.fire('Hata!', res.error, 'error');
                    }
                });
        }
    });
}

function toggleDomain(id, currentStatus) {
    fetch(`/api/domains/${id}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ isActive: !currentStatus })
    })
    .then(r => r.json())
    .then(res => {
        if (res.success) {
            loadDomains();
        }
    });
}

function renewSSL(id) {
    Swal.fire({
        title: 'SSL Yenileniyor...',
        text: 'Lütfen bekleyin',
        allowOutsideClick: false,
        didOpen: () => Swal.showLoading()
    });

    fetch(`/api/domains/${id}/ssl/renew`, { method: 'POST' })
        .then(r => r.json())
        .then(res => {
            if (res.success) {
                Swal.fire('Başarılı!', 'SSL sertifikası yenilendi.', 'success');
            } else {
                Swal.fire('Hata!', res.error, 'error');
            }
        })
        .catch(() => Swal.fire('Hata!', 'Bağlantı hatası', 'error'));
}
</script>
